<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:background="#FFFFFF"
        >

    <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter with your name"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter with your password"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_login_name"
        app:layout_constraintStart_toStartOf="@id/et_login_name"
    />
    <Button
            android:id="@+id/bt_login_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/et_login_password"
            app:layout_constraintTop_toBottomOf="@id/et_login_password"
            android:background="#FF65CE"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registre-se"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_login_sign_in"
            app:layout_constraintTop_toBottomOf="@id/et_login_password"
            android:background="#FF65CE"
    />

</android.support.constraint.ConstraintLayout>